<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.npc.test.TestActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productSearchBox"
        android:layout_gravity="bottom"
        android:inputType="text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text="@string/button_search_products"
        android:onClick="searchProductButtonOnClick"
        android:layout_below="@+id/productSearchBox"
        android:id="@+id/productSearchButton" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productList"
        android:layout_below="@+id/productSearchButton"
        android:layout_above="@+id/productSeachBackButton"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:id="@+id/productSeachBackButton"
        android:layout_alignParentBottom="true"
        android:onClick="searchProductBackButtonOnClick" />

</RelativeLayout>
